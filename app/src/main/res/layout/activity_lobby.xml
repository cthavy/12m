<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.a12m.one2many.Lobby">

    <ProgressBar
        android:id="@+id/progressBarLobby"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/eventsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/viewSeperator" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/viewSeperator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="480dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_camera"
        android:background="@drawable/ic_camera"
        android:layout_below="@+id/viewSeperator"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_lobby"
        android:background="@drawable/ic_drawer"
        android:layout_below="@+id/viewSeperator"
        android:layout_toRightOf="@+id/btn_camera"
        android:layout_toEndOf="@+id/btn_camera"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_newEvent"
        android:background="@drawable/ic_add_new"
        android:layout_below="@+id/viewSeperator"
        android:layout_alignRight="@+id/viewSeperator"
        android:layout_alignEnd="@+id/viewSeperator" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_profile"
        android:background="@drawable/ic_self"
        android:layout_below="@+id/viewSeperator"
        android:layout_toLeftOf="@+id/btn_camera"
        android:layout_toStartOf="@+id/btn_camera"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="12m"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/btn_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
