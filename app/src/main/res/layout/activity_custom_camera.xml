<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/captureImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_broadcast_selected" />

    <Button
        android:id="@+id/flash"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/captureImage"
        android:background="@drawable/flash" />

    <Button
        android:id="@+id/flipCamera"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/captureImage"
        android:background="@drawable/switch_camera" />

    <Button
        android:id="@+id/button_cancel_picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/captureImage"
        android:background="@drawable/cancel"
        android:visibility="invisible"
        android:enabled="false"/>

    <Button
        android:id="@+id/button_save_picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/captureImage"
        android:background="@drawable/check"
        android:visibility="invisible"
        android:enabled="false" />

</RelativeLayout>