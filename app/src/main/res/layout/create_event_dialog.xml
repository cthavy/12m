<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:clickable="false"
        android:background="@color/colorPrimary"
        android:text="Create New Event"
        android:textColor="#fff"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewNewEventProfilePic"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonDialogHeader"/>

    <EditText
        android:id="@+id/editTextNewEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewNewEventProfilePic"
        android:hint="@string/new_event_name"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonNewEventChooseFriends"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:padding="6sp"
        android:layout_below="@+id/editTextNewEventName"
        android:layout_centerHorizontal="true"
        android:text="@string/choose_friends"
        android:background="@drawable/button_background"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/buttonCreateEventAccept"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_below="@+id/buttonNewEventChooseFriends"
        android:text="@string/create_event"
        android:background="@drawable/button_background"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/buttonCreateEventCanel"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_below="@+id/buttonNewEventChooseFriends"
        android:layout_alignParentRight="true"
        android:text="@string/cancel"
        android:background="@drawable/button_background"
        android:textColor="#fff"/>

</RelativeLayout>