<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_drop"
    tools:context=".Login">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLogin"
        android:hint="Usernname"
        android:textColorHint="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPW"
        android:hint="Password"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignParentRight="true"
        android:textColorHint="#fff"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/buttonLogin"
        android:onClick="loginNow"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editTextPW"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/textViewRegister"
        android:clickable="false"
        android:linksClickable="false"
        android:onClick="register"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignLeft="@+id/textViewLogo"
        android:layout_alignStart="@+id/textViewLogo"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/textViewForgot"
        android:clickable="true"
        android:linksClickable="false"
        android:onClick="forgotPass"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignRight="@+id/buttonLogin"
        android:layout_alignEnd="@+id/buttonLogin"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="One2many"
        android:id="@+id/textViewLogo"
        android:textSize="40dp"
        android:layout_above="@+id/editTextLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:textColor="#404040" />
</RelativeLayout>
